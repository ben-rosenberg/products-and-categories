@model Category

@{
    ViewData["Title"] = "Current Products";
}

<div class="col-sm-6">
    <h1 class="text-center">Products</h1>
    <div class="card">
        <div class="card-body">
            <div class="list-group">
                @foreach(ProductCategoryAssociation association in Model.CategorysProductAssociations) {
                    <a
                        asp-controller="Product"
                        asp-action="Details"
                        asp-route-productId="@association.ProductId"
                        class="list-group-item list-group-item-action"
                    >@association.AssociatedProduct.Name</a>
                }
            </div>
        </div>
    </div>
</div>